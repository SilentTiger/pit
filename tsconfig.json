{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "alwaysStrict": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./types/",
    "pretty": true,
    "version": true
  }
}