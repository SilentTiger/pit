{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "webworker"
    ],
    "alwaysStrict": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./types/",
    "pretty": true,
    "version": true
  }
}