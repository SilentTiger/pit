{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strict": true,
    "target": "es6",
    "lib": [
      "dom",
      "es6",
    ],
    "alwaysStrict": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./types/",
    "pretty": true,
    "version": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
      }
    ]
  }
}