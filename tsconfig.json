{
  "compilerOptions": {
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "strict": true,
    "target": "es6",
    "lib": ["dom", "es6"],
    "alwaysStrict": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./types/",
    "pretty": true,
    "version": true,
    "plugins": [],
    "experimentalDecorators": true,
    "skipLibCheck": true // 暂时禁用 .d.ts 的类型检查
  }
}
